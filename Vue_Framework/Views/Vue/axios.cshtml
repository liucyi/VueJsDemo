
@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="http://211.149.193.19:8090/vue-tutorials/03.Ajax/vue-resource/style.css" />
</head>

<body>
    <div id="app">
        <div class="container">
            <simple-grid v-bind:data-list="gridData" v-bind:columns="gridColumns">
            </simple-grid>
        </div>
    </div>

    <template id="grid-template">
        <table>
            <thead>
                <tr>
                    <th v-for="col in columns">
                        {{ col }}
                    </th>

            </thead>
            <tbody>

                <tr v-for="(index,entry) in dataList">
                    <td v-for="col in columns">
                        {{entry[col]}}
                    </td>

                </tr>
            </tbody>
        </table>
    </template>


    @*<script src="~/Scripts/element-ui/vue-1.0.26.js"2222></script>*@
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    @*<script src="~/Scripts/element-ui/vue-2.1.8.js"></script>*@
 
    <script>
        Vue.component('simple-grid', {
            template: '#grid-template',
            props: ['dataList', 'columns']
        })
    </script>
    <script>

        var demo = new Vue({
            el: '#app',
            data: {
                //   gridColumns: ['customerId', 'companyName', 'contactName', 'phone'],
                gridColumns: ['projectNumber', 'projectDate', 'areaId', 'gardenId'],
                gridData: [],
              
                apiUrl: 'http://localhost:1143/api/241/Project'
            },
            ready: function () {
                this.getCustomers();
            },
            methods: {
                getCustomers: function () {
                    this.$http.get(this.apiUrl)
                        .then((response) => {
                            this.$set('gridData', response.data);

                            console.log(response.data)
                        })
                        .catch(function (response) {
                            console.log(response);
                        });
                }
            }
        })
    </script>
</body>

</html>