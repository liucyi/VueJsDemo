
@{
    Layout = null;
}


<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" href="http://211.149.193.19:8090/vue-tutorials/03.Ajax/vue-resource/style.css" />
</head>

<body>
    <div id="app">
        <div class="container">
            <simple-grid v-bind:data-list="gridData" v-bind:columns="gridColumns">
            </simple-grid>
        </div>
    </div>

    <template id="grid-template">
        <table>
            <thead>
                <tr>
                    @*<th v-for="col in columns">
                            {{ col }}
                        </th>*@
                    <th>customerId</th>
                    <th>companyName</th>
                    <th>contactName</th>
                    <th>phone</th>
            </thead>
            <tbody>
                <tr v-for="entry in dataList">
               @* <tr v-for="(index,entry) in dataList">
    <td v-for="col in columns">
              {{entry[col]}}
          </td>*@
                    <td>{{entry.customerId}}</td>
                    <td>{{entry.companyName}}</td>
                    <td>{{entry.contactName}}</td>
                    <td>{{entry.phone}}</td>
                </tr>
            </tbody>
        </table>
    </template>

    @*<script src="~/Scripts/vue-1.0.26.js"></script>*@
    <script src="~/Scripts/vue-2.1.8.js"></script>
    <script src="~/Scripts/vue-resource.js"></script>
    <script>
        Vue.component('simple-grid', {
            template: '#grid-template',
            props: ['dataList', 'columns']
        })
    </script>
    <script>

        var demo = new Vue({
            el: '#app',
            data: {
                gridColumns: ['customerId', 'companyName', 'contactName', 'phone'],
                gridData: [],
                apiUrl: 'http://211.149.193.19:8080/api/customers'
            },
            ready: function () {
                this.getCustomers();
            },
            methods: {
                getCustomers: function () {
                    this.$http.get(this.apiUrl)
                        .then((response) => {
                            this.$set('gridData', response.data);
                        })
                        .catch(function (response) {
                            console.log(response);
                        });
                }
            }
        })
    </script>
</body>

</html>
